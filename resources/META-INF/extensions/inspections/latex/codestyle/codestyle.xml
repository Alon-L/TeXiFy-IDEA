<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexMathFunctionTextInspection"
                         groupName="LaTeX" displayName="Use math function instead of \text"
                         enabledByDefault="true"
                         level="WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexGroupedSubSupScriptInspection"
                         groupName="LaTeX" displayName="Grouped superscript and subscript"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexGatherEquationsInspection"
                         groupName="LaTeX" displayName="Gather equations"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.LatexFigureNotReferencedInspection"
                         groupName="LaTeX" displayName="Figure not referenced"
                         enabledByDefault="true"
                         level="WEAK WARNING"/>
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexMissingLabelInspection"
                         groupName="LaTeX" displayName="Missing labels"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexLabelConventionInspection"
                         groupName="LaTeX" displayName="Label conventions"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexLineBreakInspection"
                         groupName="LaTeX" displayName="Start sentences on a new line"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexEquationReferenceInspection"
                         groupName="LaTeX" displayName="Use \eqref{...} instead of (\ref{...})"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexDocumentclassNotInRootInspection"
                         groupName="LaTeX" displayName="File that contains a document environment should contain a \documentclass command"
                         enabledByDefault="true"
                         level="WARNING"/>
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexMightBreakTexifyInspection"
                         groupName="LaTeX" displayName="Might break TeXiFy functionality"
                         enabledByDefault="true"
                         level="ERROR" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codestyle.LatexTooLargeSectionInspection"
                         groupName="LaTeX" displayName="Too large sections"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
    </extensions>

    <xi:include href="/META-INF/extensions/inspections/latex/codestyleestyle/spacing.xml" xpointer="xpointer(/idea-plugin/*)"/>
</idea-plugin>